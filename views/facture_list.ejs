<% include require/header.ejs%>
<!doctype html>
<html>
<head>
    <title><%=page_title%></title>
    <link rel="stylesheet" type="text/css" href="/assets/css/bootstrap.min.css"><!-- load bootstrap css -->
    <link rel="stylesheet" media="screen" href="/assets/fonts/font-awesome/font-awesome.min.css"><!-- load fontawesome -->
    <style>

        body        { padding-top:80px; 
                        padding-left: 100px;
                        padding-right: 100px;
                    }

        
    </style>
</head>
<body>
    <div class="especificaciones">

    <ul class="list-group" style:"width:100%">
    <%for(var i=0; i<data_f.length; i++){%>
      <li style="display: flex; position:relative" class="list-group-item">
  
          <div style="margin: 0 0; width: 40%">
                <%for(var j=0; j<data_p.length; j++){
                    if(data_p[j].Codigo_proveedor == data_f[i].id_Proveedor){%>
                        <h3>
                            <%=data_p[j].Nombre_proveedor%>
                            <span class="label label-default"><%=data_f[i].Fecha.getDate()%>/<%=data_f[i].Fecha.getMonth()%>/<%=data_f[i].Fecha.getFullYear()%></span>
                        </h3>
                <%}
                }%>
        </div>
        <div style="margin: 0 0; width: 50%">
                <ul style="font-size: 20px; list-style:none;">
                    <li>Costo: $<%=data_f[i].Costo%></li>
                    <li>IVA: %<%=data_f[i].Iva%></li>
                </ul>
        </div>      

        <div style="width: 10%">
            <form method="get" action="/new_facture/<%=data_f[i].id_Factura%>" style="height: 46px; margin-left: 30px; width: 20%">
            <button type="submit" class="btn btn-default btn-lg"><span class="glyphicon glyphicon-pencil" aria-hidden="true"></span></button>
            </form>
        </div>
      
      </li>
    <%}%>  
    </ul>

</div>
</body>
</html>