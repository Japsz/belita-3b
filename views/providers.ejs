<% include require/header.ejs%>
<!doctype html>
<html>
<head>
    <title><%=page_title%></title>
    <link rel="stylesheet" type="text/css" href="/assets/css/bootstrap.min.css"><!-- load bootstrap css -->
    <link rel="stylesheet" media="screen" href="/assets/fonts/font-awesome/font-awesome.min.css"><!-- load fontawesome -->
    <style>
        body        { padding-top:80px; 
                        padding-left: 100px;
                        padding-right: 100px;
                    }
        #input_provider_form{
            margin-top: 50px;
        }            
        ul{
            margin-top: 0px;
        }
        .especificaciones{
            display: flex;
        }

        
        ul{
            margin:0;
            padding:0;
        }
    </style>
</head>
<body>
<form method="post" action="/save_provider" id="input_provider_form">
    <div class="input-group">
        <span class="input-group-addon" id="basic-addon1"></span>
        <input type="text" name="providername" class="form-control" placeholder="Registrar Proveedor" aria-describedby="basic-addon1">
    </div>
    <button type="submit" class="btn btn-success dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
    Registrar 
  </button>
</form>
<div class="especificaciones">
<ul class="list-group" style:"width:100%">
<%for(var i=0; i< data.length; i++){%>
  <li style="display: flex" class="list-group-item">
    <div style="margin: 0 0; width: 80%">
        <h3 style="margin: 10px 0"><%=data[i].Nombre_proveedor%></h3>
    </div>
    <div>
    <form method="get" action="/delete_provider/<%=data[i].Codigo_proveedor%>" style="height: 46px; margin-left: 30px; width: 20%">
    <button type="submit" class="btn btn-default btn-lg"><span class="glyphicon glyphicon-remove" aria-hidden="true"></span></button>
    </form>
    </div>
  </li>
  <%}%>
</ul>
</div>
</body>
</html>